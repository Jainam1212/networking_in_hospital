        style.
            .header_bottom {
                position: fixed;
                z-index: 1;
                width: 100%;
            }
            *::-webkit-scrollbar{
                display: none;
            }

            .navbar-brand {
                z-index: 1;
            }
            .slotBox{
                color: #00c6a9;
                margin: auto;
                width: 400px;
                display: flex;
                flex-direction: column;
            }
            .slotBox h2{
                color:red;
                text-align:center;
            }
            .hero_area{
              height: 100vh;
              display: flex;
              flex-direction: column;
              justify-content: space-between;
            }
            form{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            } 
            form input{
                height:40px;
                color: #00c6a9;
                border:1px solid #00c6a9;
                width:100%;
                margin:10px;
                border-radius:10px
            }
            input::placeholder{
                color: #00c6a9;
            }
            .nice-select{
                border:1px solid #00c6a9;
                height:40px;
                width:100%;
            }
            form button{
                border:1px solid #00c6a9;
                background:white;
                color: #00c6a9;
                height:50px;
                border-radius:10px;
                text-align:center;
                cursor:pointer;
                transition: 1s;
            }
            form button:hover{
                background: #00c6a9;
                color: white;                
            }
            

