    .slotBox 
        h2 #{locals.error}
        form(action=locals.link method="post") 
            select(name="time", id="doctorcategory_123")
                option(value="") --Please choose time duration
                option(value="9:00AM TO 10:00AM") 9:00AM TO 10:00AM
                option(value="10:00AM TO 11:00AM") 10:00AM TO 11:00AM
                option(value="11:00AM TO 12:00AM") 11:00AM TO 12:00AM
                option(value="3:00PM TO 4:00PM") 3:00PM TO 4:00PM
                option(value="4:00PM TO 5:00PM") 4:00PM TO 5:00PM
                option(value="5:00PM TO 6:00PM") 5:00PM TO 6:00PM
            input(type="number", name="slot" placeholder="enter anount of slots" required)
            button(type="submit") Generate Slot
        h4 #{locals.message}
