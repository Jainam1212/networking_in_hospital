doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Verification
    style.
      .errors {
        color: rgb(255, 80, 80);
        font-size: 20px;
        margin: 5px;
      }
      body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
        color: #00c6a9;
      }
      .container {
        border-radius: 10px;
        border: 1px solid #00c6a9;
        padding: 20px;
        height: fit-content;
        width: 300px;
        display: flex;
        flex-direction: column;
      }
      .container p {
        margin: 5px;
        text-align: center;
        margin-bottom: 30px;
      }
      .container form {
        display: flex;
        flex-direction: column;
      }
      input[type='number'] {
        border: 1px solid #00c6a9;
        margin-bottom: 30px;
      }
      button {
        border: 1px solid  #00c6a9;
        background-color: #00c6a9;
        color: white;
        cursor: pointer;
        width: fit-content;
        margin: auto;
        margin-bottom: 30px;
        padding: 10px;
        border-radius: 10px;
      }
  body
    h1 Verification
    .container
      p.errors #{locals.message}
      p Enter the 6-digit code sent to your entered email id
      form(action='/verifysubmit', method='POST')
        input(type='number', name='verifycode', id='verify')
        button(type='submit') Book Your Appointment
