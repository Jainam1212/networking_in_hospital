          background-color: #f3f3f3;
          padding: 32px;
          box-sizing: border-box;
          border-radius: 8px;
          text-align: center;
      }

      .slider-prev-btn,
      .slider-next-btn {
          width: 105px;
          height: 50px;
          background: #ccc;
          border: none;
          color: #fff;
          font-size: 24px;
          cursor: pointer;
          margin: 0 10%;
          /* position: absolute; */
          top: 50%;
          /* transform: translateY(-50%); */
          padding: 8px;
          box-sizing: border-box;
      }

      .forth_back{
          display: flex;
          justify-content: center;
      }
      .slider-prev-btn {
          left: 0;
      }

      .slider-next-btn {
          right: 0;
      }
      *::-webkit-scrollbar{
        display: none;
      }
    script.
      const sliderInner = document.querySelector(".slider-inner123");
      const prevButton = document.querySelector(".slider-prev-btn");
      const nextButton = document.querySelector(".slider-next-btn");

      let currentSlide1 = 0;

      function goToSlide(slide1) {
        sliderInner.style.transform = `translateX(-${slide1 * 100}%)`;
        currentSlide1 = slide1;
      }

      function nextSlide() {
        if (currentSlide1 === 1) {
          goToSlide(0);
        } else {
          goToSlide(currentSlide1 + 1);
        }
      }

      function prevSlide() {
        if (currentSlide1 === 0) {
          goToSlide(1);
        } else {
          goToSlide(currentSlide1 - 1);
        }
      }

      nextButton.addEventListener("click", nextSlide);
      prevButton.addEventListener("click", prevSlide);


