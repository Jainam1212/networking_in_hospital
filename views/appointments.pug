      }

      .slider-inner123 {
          display: flex;
          width: 100%;
          transition: transform 0.5s;
      }

      .slider-item123 {
          height: 250px;
          width: 250px;
          margin: 20px;
          box-sizing: border-box;
          display: flex;
          align-items: center;
          justify-content: center;
      }
